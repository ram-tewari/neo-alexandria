# Development Environment Variables for Docker Compose
# This file provides default values for docker-compose.dev.yml
# Copy this to .env in the backend directory and customize as needed

# ============================================================================
# POSTGRESQL CONFIGURATION
# ============================================================================

# PostgreSQL Database Name
POSTGRES_DB=neo_alexandria_dev

# PostgreSQL User
POSTGRES_USER=postgres

# PostgreSQL Password (change for production!)
POSTGRES_PASSWORD=devpassword

# PostgreSQL Port (default: 5432)
POSTGRES_PORT=5432

# PostgreSQL Host (for application connection)
POSTGRES_HOST=localhost

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis Port (default: 6379)
REDIS_PORT=6379

# Redis Host (for application connection)
REDIS_HOST=localhost

# Redis Database Numbers
REDIS_CACHE_DB=0
REDIS_CELERY_DB=1

# ============================================================================
# APPLICATION DATABASE URL
# ============================================================================

# Use this in your application's .env file to connect to the Docker PostgreSQL
# DATABASE_URL=postgresql+asyncpg://postgres:devpassword@localhost:5432/neo_alexandria_dev

# Or for SQLAlchemy sync driver:
# DATABASE_URL=postgresql://postgres:devpassword@localhost:5432/neo_alexandria_dev

# ============================================================================
# CELERY CONFIGURATION
# ============================================================================

# Celery Broker URL (Redis)
CELERY_BROKER_URL=redis://localhost:6379/1

# Celery Result Backend (Redis)
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ============================================================================
# USAGE INSTRUCTIONS
# ============================================================================

# 1. Start services:
#    docker-compose -f docker-compose.dev.yml up -d
#
# 2. Check service health:
#    docker-compose -f docker-compose.dev.yml ps
#
# 3. View logs:
#    docker-compose -f docker-compose.dev.yml logs -f
#
# 4. Stop services:
#    docker-compose -f docker-compose.dev.yml down
#
# 5. Stop services and remove volumes (WARNING: deletes all data):
#    docker-compose -f docker-compose.dev.yml down -v
#
# 6. Connect to PostgreSQL:
#    psql -h localhost -U postgres -d neo_alexandria_dev
#    (password: devpassword)
#
# 7. Connect to Redis:
#    redis-cli -h localhost -p 6379

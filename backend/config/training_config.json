{
  "model": {
    "name": "distilbert-base-uncased",
    "max_length": 512,
    "num_labels": 10
  },
  "training": {
    "epochs": 3,
    "batch_size": 16,
    "learning_rate": 2e-5,
    "warmup_steps": 500,
    "weight_decay": 0.01,
    "max_grad_norm": 1.0
  },
  "optimization": {
    "use_fp16": true,
    "gradient_checkpointing": true,
    "dataloader_num_workers": 4
  },
  "early_stopping": {
    "enabled": true,
    "patience": 2,
    "metric": "accuracy",
    "mode": "max"
  },
  "evaluation": {
    "strategy": "epoch",
    "save_strategy": "epoch",
    "load_best_model_at_end": true,
    "metric_for_best_model": "accuracy"
  },
  "logging": {
    "log_level": "INFO",
    "log_steps": 100,
    "tensorboard_enabled": true
  },
  "paths": {
    "data_dir": "backend/data/splits",
    "output_dir": "models/classification",
    "checkpoint_dir": "models/classification/checkpoints"
  },
  "dataset": {
    "categories": [
      "cs.AI",
      "cs.CL",
      "cs.CV",
      "cs.LG",
      "cs.CR",
      "cs.DB",
      "cs.DC",
      "cs.NE",
      "cs.RO",
      "cs.SE"
    ],
    "train_split": 0.8,
    "val_split": 0.1,
    "test_split": 0.1,
    "random_seed": 42
  },
  "performance_targets": {
    "min_accuracy": 0.90,
    "max_training_time_hours": 4,
    "max_model_size_mb": 500,
    "max_inference_latency_ms": 100
  }
}
